{% extends 'base.html.twig' %}

{% block body %}
    <h1>Funcionario</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ funcionario.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ funcionario.nome }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ funcionario.email }}</td>
            </tr>
            <tr>
                <th>Cargo</th>
                <td>{{ funcionario.cargo }}</td>
            </tr>
            <tr>
                <th>Ativo</th>
                <td>{% if funcionario.ativo %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Datacadastro</th>
                <td>{% if funcionario.dataCadastro %}{{ funcionario.dataCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('funcionario_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('funcionario_edit', { 'id': funcionario.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
